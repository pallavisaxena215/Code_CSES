#include<iostream>
using namespace std;
int main ()
{
  long long n,i,m=0,t=0;
  cin >> n;
  int a[n],b[n];
  
  for(i=0;i<n;i++){
      cin>>a[i];
      
  }
  
  for(i=0;i<n;i++){
      if(a[i]>=a[i+1]){
          t=a[i]-a[i+1];
          m=m+t;
          a[i+1]+=t;
      }
      
  }
  
  
  cout<<m;
  
  
  return 0;
}
